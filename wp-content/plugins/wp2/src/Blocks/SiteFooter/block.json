{
    "$schema": "https://app.blockstudio.dev/schema",
    "apiVersion": 2,
    "name": "wp2/site-footer",
    "title": "Site Footer",
    "category": "wp2-site",
    "icon": "table-row-after",
    "description": "Display the site footer",
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "ariaLabel": true,
        "color": {
            "background": true
        },
        "background": {
            "backgroundImage": true,
            "backgroundSize": true
        },
        "dimensions": {
            "minHeight": true,
            "aspectRatio": true
        },
        "customClassName": true,
        "className": false,
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "allowedBlocks": [
        "core/group",
        "core/paragraph",
        "wp2/site-brand",
        "wp2/site-menu",
        "wp2/site-alert",
        "core/social-links"
    ],
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "padding": {
                        "top": "0",
                        "bottom": "0"
                    },
                    "margin": {
                        "top": "0",
                        "bottom": "0",
                        "left": "0",
                        "right": "0"
                    }
                }
            }
        }
    },
    "blockstudio": {
        "attributes": [
            {
                "id": "option",
                "type": "select",
                "label": "Option",
                "help": "Select the header to display",
                "allowNull": "Select Option",
                "options": [
                    {
                        "label": "Default",
                        "value": "0",
                        "innerBlocks": [
                            {
                                "name": "core/group",
                                "attributes": {
                                    "metadata": {
                                        "name": "Footer Content"
                                    },
                                    "className": "wp2-group wp2-group--footer-content",
                                    "align": "full",
                                    "style": {
                                        "spacing": {
                                            "padding": {
                                                "top": "var:preset|spacing|80",
                                                "bottom": "var:preset|spacing|80"
                                            },
                                            "margin": {
                                                "top": "0",
                                                "bottom": "0"
                                            },
                                            "blockGap": "var:preset|spacing|80"
                                        },
                                        "elements": {
                                            "link": {
                                                "color": {
                                                    "text": "light"
                                                }
                                            }
                                        },
                                        "dimensions": {
                                            "minHeight": "600px"
                                        }
                                    },
                                    "backgroundColor": "dark",
                                    "layout": {
                                        "type": "constrained"
                                    }
                                },
                                "innerBlocks": [
                                    {
                                        "name": "core/group",
                                        "attributes": {
                                            "metadata": {
                                                "name": "Footer Section: Brand"
                                            },
                                            "className": "wp2-group wp2-group--footer-section",
                                            "align": "wide",
                                            "style": {
                                                "spacing": {
                                                    "padding": {
                                                        "top": "0",
                                                        "bottom": "0"
                                                    }
                                                }
                                            },
                                            "layout": {
                                                "type": "flex",
                                                "flexWrap": "nowrap",
                                                "justifyContent": "space-between",
                                                "verticalAlignment": "center"
                                            }
                                        },
                                        "innerBlocks": [
                                            {
                                                "name": "wp2/site-brand"
                                            },
                                            {
                                                "name": "core/social-links",
                                                "attributes": {
                                                    "iconColor": "dark",
                                                    "iconColorValue": "#081D2B",
                                                    "iconBackgroundColor": "light",
                                                    "iconBackgroundColorValue": "#f7f7f7",
                                                    "openInNewTab": true,
                                                    "size": "has-large-icon-size",
                                                    "layout": {
                                                        "type": "flex",
                                                        "flexWrap": "nowrap"
                                                    },
                                                    "style": {
                                                        "spacing": {
                                                            "blockGap": "var:preset|spacing|60"
                                                        }
                                                    }
                                                },
                                                "innerBlocks": [
                                                    {
                                                        "name": "core/social-link",
                                                        "attributes": {
                                                            "url": "https://www.facebook.com/OnTheWater.Fishing",
                                                            "service": "facebook"
                                                        }
                                                    },
                                                    {
                                                        "name": "core/social-link",
                                                        "attributes": {
                                                            "url": "https://www.instagram.com/wp2magazine/",
                                                            "service": "instagram"
                                                        }
                                                    },
                                                    {
                                                        "name": "core/social-link",
                                                        "attributes": {
                                                            "url": "https://www.youtube.com/user/OnTheWaterTV",
                                                            "service": "youtube"
                                                        }
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "name": "core/group",
                                        "attributes": {
                                            "metadata": {
                                                "name": "Footer Section: Legal"
                                            },
                                            "align": "wide",
                                            "className": "wp2-group wp2-group--footer-section",
                                            "style": {
                                                "spacing": {
                                                    "padding": {
                                                        "top": "0",
                                                        "bottom": "0"
                                                    },
                                                    "blockGap": "var:preset|spacing|50"
                                                }
                                            },
                                            "layout": {
                                                "type": "flex",
                                                "orientation": "vertical",
                                                "flexWrap": "nowrap",
                                                "verticalAlignment": "center"
                                            }
                                        },
                                        "innerBlocks": [
                                            {
                                                "name": "wp2/site-menu",
                                                "attributes": {
                                                    "style": {
                                                        "spacing": {
                                                            "padding": {
                                                                "top": "0",
                                                                "bottom": "0"
                                                            }
                                                        }
                                                    }
                                                },
                                                "innerBlocks": [
                                                    {
                                                        "name": "core/group",
                                                        "attributes": {
                                                            "layout": {
                                                                "type": "flex",
                                                                "orientation": "horizontal",
                                                                "justifyContent": "flex-start",
                                                                "flexWrap": "nowrap"
                                                            }
                                                        },
                                                        "innerBlocks": [
                                                            {
                                                                "name": "core/paragraph",
                                                                "attributes": {
                                                                    "content": "Copyright © [CurrentYear] [LegalName]. All Rights Reserved",
                                                                    "style": {
                                                                        "spacing": {
                                                                            "margin": {
                                                                                "top": "0",
                                                                                "bottom": "0"
                                                                            }
                                                                        },
                                                                        "elements": {
                                                                            "link": {
                                                                                "color": {
                                                                                    "text": "var:preset|color|white"
                                                                                },
                                                                                ":hover": {
                                                                                    "color": {
                                                                                        "text": "var:preset|color|accent-1"
                                                                                    }
                                                                                }
                                                                            }
                                                                        },
                                                                        "typography": {
                                                                            "fontSize": "16px",
                                                                            "lineHeight": "1.25",
                                                                            "fontWeight": "400"
                                                                        }
                                                                    },
                                                                    "textColor": "light",
                                                                    "fontFamily": "inter"
                                                                }
                                                            },
                                                            {
                                                                "name": "core/navigation",
                                                                "attributes": {
                                                                    "ref": 175,
                                                                    "textColor": "white",
                                                                    "overlayMenu": "never",
                                                                    "style": {
                                                                        "typography": {
                                                                            "fontSize": "16px",
                                                                            "lineHeight": "1.25",
                                                                            "fontWeight": "400",
                                                                            "textDecoration": "underline"
                                                                        },
                                                                        "spacing": {
                                                                            "blockGap": "var:preset|spacing|50"
                                                                        },
                                                                        "elements": {
                                                                            "link": {
                                                                                "typography": {
                                                                                    "textDecoration": "underline"
                                                                                }
                                                                            }
                                                                        }
                                                                    },
                                                                    "fontFamily": "inter"
                                                                }
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}