{
    "$schema": "https://app.blockstudio.dev/schema",
    "apiVersion": 2,
    "name": "wp2/site-header",
    "title": "Site Header",
    "category": "wp2-site",
    "icon": "table-row-after",
    "description": "Display the site header",
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "ariaLabel": true,
        "color": {
            "background": true
        },
        "background": {
            "backgroundImage": true,
            "backgroundSize": true
        },
        "dimensions": {
            "minHeight": true,
            "aspectRatio": true
        },
        "className": false,
        "customClassName": true,
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "allowedBlocks": [
        "core/group",
        "wp2/navbar-primary",
        "wp2/navbar-secondary",
        "wp2/site-brand",
        "wp2/site-menu",
        "wp2/site-search",
        "core/navigation"
    ],
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "padding": {
                        "top": "0",
                        "bottom": "0"
                    },
                    "margin": {
                        "top": "0",
                        "bottom": "0",
                        "left": "0",
                        "right": "0"
                    }
                }
            }
        }
    },
    "blockstudio": {
        "attributes": [
            {
                "id": "option",
                "type": "select",
                "label": "Option",
                "help": "Select the header to display",
                "allowNull": "Select Option",
                "options": [
                    {
                        "label": "Default",
                        "value": "0",
                        "innerBlocks": [
                            {
                                "name": "core/group",
                                "attributes": {
                                    "metadata": {
                                        "name": "Primary Navbar Wrapper"
                                    },
                                    "className": "wp2-group wp2-group--navbar-primary",
                                    "align": "full",
                                    "style": {
                                        "spacing": {
                                            "padding": {
                                                "top": "0",
                                                "bottom": "0"
                                            },
                                            "margin": {
                                                "top": "0",
                                                "bottom": "0"
                                            }
                                        },
                                        "elements": {
                                            "link": {
                                                "color": {
                                                    "text": "light"
                                                }
                                            }
                                        }
                                    },
                                    "backgroundColor": "dark",
                                    "layout": {
                                        "type": "constrained"
                                    }
                                },
                                "innerBlocks": [
                                    {
                                        "name": "wp2/navbar-primary",
                                        "attributes": {
                                            "align": "wide",
                                            "layout": {
                                                "type": "constrained"
                                            }
                                        },
                                        "innerBlocks": [
                                            {
                                                "name": "core/group",
                                                "attributes": {
                                                    "style": {
                                                        "spacing": {
                                                            "padding": {
                                                                "top": "0",
                                                                "bottom": "0"
                                                            },
                                                            "margin": {
                                                                "top": "0",
                                                                "bottom": "0",
                                                                "left": "0",
                                                                "right": "0"
                                                            }
                                                        }
                                                    },
                                                    "align": "wide",
                                                    "layout": {
                                                        "type": "flex",
                                                        "flexWrap": "nowrap",
                                                        "justifyContent": "space-between"
                                                    }
                                                },
                                                "innerBlocks": [
                                                    {
                                                        "name": "core/group",
                                                        "attributes": {
                                                            "layout": {
                                                                "type": "flex",
                                                                "flexWrap": "nowrap",
                                                                "justifyContent": "flex-start"
                                                            },
                                                            "style": {
                                                                "spacing": {
                                                                    "padding": {
                                                                        "top": "0",
                                                                        "bottom": "0"
                                                                    },
                                                                    "margin": {
                                                                        "top": "0",
                                                                        "bottom": "0",
                                                                        "left": "0",
                                                                        "right": "0"
                                                                    }
                                                                }
                                                            }
                                                        },
                                                        "innerBlocks": [
                                                            {
                                                                "name": "wp2/site-brand"
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "name": "core/group",
                                                        "attributes": {
                                                            "layout": {
                                                                "type": "flex",
                                                                "flexWrap": "nowrap",
                                                                "justifyContent": "flex-end"
                                                            },
                                                            "style": {
                                                                "spacing": {
                                                                    "padding": {
                                                                        "top": "0",
                                                                        "bottom": "0"
                                                                    },
                                                                    "margin": {
                                                                        "top": "0",
                                                                        "bottom": "0",
                                                                        "left": "0",
                                                                        "right": "0"
                                                                    }
                                                                }
                                                            }
                                                        },
                                                        "innerBlocks": [
                                                            {
                                                                "name": "wp2/site-menu",
                                                                "attributes": {
                                                                    "className": "wp2-site-menu--primary"
                                                                },
                                                                "innerBlocks": [
                                                                    {
                                                                        "name": "core/navigation",
                                                                        "attributes": {
                                                                            "textColor": "white",
                                                                            "overlayMenu": "always",
                                                                            "icon": "menu",
                                                                            "overlayBackgroundColor": "white",
                                                                            "customOverlayBackgroundColor": "white",
                                                                            "overlayTextColor": "dark",
                                                                            "customOverlayTextColor": "dark",
                                                                            "maxNestingLevel": 0,
                                                                            "layout": {
                                                                                "type": "flex",
                                                                                "flexWrap": "nowrap",
                                                                                "orientation": "vertical"
                                                                            }
                                                                        }
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "name": "core/group",
                                "attributes": {
                                    "metadata": {
                                        "name": "Secondary Navbar Wrapper"
                                    },
                                    "className": "wp2-group wp2-group--navbar-secondary",
                                    "align": "full",
                                    "style": {
                                        "spacing": {
                                            "padding": {
                                                "top": "0",
                                                "bottom": "0"
                                            },
                                            "margin": {
                                                "top": "0",
                                                "bottom": "0"
                                            }
                                        },
                                        "border": {
                                            "bottom": {
                                                "color": "var:preset|color|separator",
                                                "style": "solid",
                                                "width": "2px"
                                            },
                                            "top": {},
                                            "right": {},
                                            "left": {}
                                        }
                                    },
                                    "layout": {
                                        "type": "constrained"
                                    }
                                },
                                "innerBlocks": [
                                    {
                                        "name": "wp2/navbar-secondary",
                                        "attributes": {
                                            "align": "wide",
                                            "layout": {
                                                "type": "constrained"
                                            },
                                            "style": {
                                                "elements": {
                                                    "link": {
                                                        "color": {
                                                            "text": "dark"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "innerBlocks": [
                                            {
                                                "name": "core/group",
                                                "attributes": {
                                                    "layout": {
                                                        "type": "flex",
                                                        "flexWrap": "nowrap",
                                                        "justifyContent": "space-between"
                                                    },
                                                    "style": {
                                                        "spacing": {
                                                            "padding": {
                                                                "top": "0",
                                                                "bottom": "0"
                                                            },
                                                            "margin": {
                                                                "top": "0",
                                                                "bottom": "0",
                                                                "left": "0",
                                                                "right": "0"
                                                            }
                                                        }
                                                    }
                                                },
                                                "innerBlocks": [
                                                    {
                                                        "name": "wp2/site-menu",
                                                        "attributes": {
                                                            "className": "wp2-site-menu--secondary-links",
                                                            "style": {
                                                                "layout": {
                                                                    "selfStretch": "fill",
                                                                    "flexSize": null
                                                                }
                                                            }
                                                        },
                                                        "innerBlocks": [
                                                            {
                                                                "name": "core/navigation",
                                                                "attributes": {
                                                                    "ref": 170,
                                                                    "overlayMenu": "never",
                                                                    "layout": {
                                                                        "type": "flex",
                                                                        "flexWrap": "nowrap",
                                                                        "selfStretch": "fill",
                                                                        "flexSize": null
                                                                    },
                                                                    "showSubmenuIcon": true,
                                                                    "openSubmenusOnClick": false,
                                                                    "icon": "handle",
                                                                    "hasIcon": true,
                                                                    "maxNestingLevel": 2
                                                                }
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "name": "wp2/site-search",
                                                        "attributes": {
                                                            "style": {
                                                                "layout": {
                                                                    "selfStretch": "fixed",
                                                                    "flexSize": "300px"
                                                                }
                                                            }
                                                        },
                                                        "innerBlocks": [
                                                            {
                                                                "name": "core/search",
                                                                "attributes": {
                                                                    "label": "Search Site",
                                                                    "showLabel": false,
                                                                    "placeholder": "Search WP2",
                                                                    "buttonText": "Search",
                                                                    "buttonPosition": "button-inside",
                                                                    "buttonUseIcon": true
                                                                }
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}