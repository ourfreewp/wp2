{
    "$schema": "https://app.blockstudio.dev/schema",
    "apiVersion": 2,
    "name": "wp2/article-content",
    "title": "Content",
    "category": "wp2-article",
    "icon": "editor-insertmore",
    "description": "Display the article content",
    "allowedBlocks": [
        "core/group",
        "core/post-content"
    ],
    "blockstudio": {
        "attributes": [
            {
                "id": "option",
                "type": "select",
                "label": "Option",
                "allowNull": "Select Option",
                "options": [
                    {
                        "label": "Default",
                        "value": "0",
                        "innerBlocks": [
                            {
                                "name": "core/group",
                                "innerBlocks": [
                                    {
                                        "name": "core/post-content"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}